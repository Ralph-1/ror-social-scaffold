<li>
  Name: <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
      <br>
      <% unless user == current_user %>
        <% if current_user.friend?(user) %>
        <%= render "friendships/add_friend", user: user, action_text: 'unfriend'%>
    <% elsif current_user.pending_friends.include?(user) %>
      <%= render "friendships/add_friend", user: user, action_text: 'delete'%>
      <% if current_user.requester?(user)%>
        <%= render "friendships/add_friend", user: user, action_text: 'delete'%>
      <% else%>
        <%= render "friendships/add_friend", user: user, action_text: 'delete'%>
      <% end %>
      <% else %>
        <%= render "friendships/add_friend", user: user, action_text: 'Add friend'%>
     <% end %>
     <% end %>
  </span>
</li>